{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ESNext"],
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["shared/*"]
    }
  },
  "include": ["projects/**/*", "utils/**/*", "clients/**/*"]
}
